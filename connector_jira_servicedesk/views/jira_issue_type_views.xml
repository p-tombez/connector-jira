<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_jira_issue_type_form" model="ir.ui.view">
    <field name="name">jira.issue.type.form</field>
    <field name="model">jira.issue.type</field>
    <field name="inherit_id" ref="connector_jira.view_jira_issue_type_form" />
    <field name="arch" type="xml">
          <field name="description" position="after">
            <field name="is_service_desk" />
          </field>
    </field>
  </record>

  <record id="view_jira_issue_type_tree" model="ir.ui.view">
    <field name="name">jira.issue.type.tree</field>
    <field name="model">jira.issue.type</field>
    <field name="inherit_id" ref="connector_jira.view_jira_issue_type_tree"/>
    <field name="arch" type="xml">
      <field name="description" position="after">
        <field name="is_service_desk"/>
      </field>
    </field>
  </record>

</odoo>
